@import "partials/header.styl"
@import "partials/footer.styl"

body
  	margin: 0px
  	padding: 0px
  	font: 18px 'Century Gothic', CenturyGothic, AppleGothic, sans-serif

a
  color: #fff
  text-decoration: none
a:hover
	color: #00B7FF

a.logo
	display: inline-block
	position: absolute
	max-width: 50px
	max-height: 50px
	padding: 15px 0px 0px 15px

	img
		width: 100%
		height: auto


// Landing page styling
.banner
	display: inline-block
	width: 100%
	background: url("/images/nightspace.jpeg") no-repeat
	background-attachment: fixed
	background-size: cover

	.banner-overlay
		background-color: #4f5051
		opacity: 0.7
		display: inline-block
		height: 800px
		width: 100%

	.banner-text	
		color: #fff
		h2
			padding-top: 175px
			margin-bottom: 0px
			font-size: 74px
			font-weight: bold
			text-align: center
		h3
			font-size: 36px
			font-weight: normal
			text-align: center

		a
			border: solid 2px
			padding: 15px
			display: inline-block
			position: relative
			left: 40%
			font-size: 24px
			margin-right: 15px
		a:hover
			background-color: #fff

.about
	padding: 25px 0px 25px 0px
	
	.about-img
		img
			max-width: 290px
			border:10px solid #4f5051;
		    border-radius: 500px;
		    -webkit-border-radius: 500px;
		    -moz-border-radius: 500px;

	.about-bio
		width: 1000px
		margin: 0 auto




